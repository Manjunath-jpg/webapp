pipeline{
    agent any
    stages{
        stage('git checkout'){
            steps{
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'git', url: 'https://github.com/Manjunath-jpg/webapp.git']])
            }
        }
        stage("build"){
            steps{
                sh 'mvn clean package'
            }
        }
        stage('test'){
            steps{
                withSonarQubeEnv('sonar-server-10.6'){
                    sh 'mvn sonar:sonar'
                   
                }
            }
        }
        stage('tomcatdeploy'){
            steps{
                deploy adapters: [tomcat9(alternativeDeploymentContext: '', credentialsId: 'tomcat-crd', path: '', url: 'http://13.201.3.110:8080/')], contextPath: 'mywebapp', war: 'target/mywebapp.war'
            }
        }
    }
}
